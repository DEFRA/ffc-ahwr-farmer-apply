{% extends './layouts/layout.njk' %}

{% block pageTitle %}{{serviceName}}{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "/apply/register-your-interest/enter-your-sbi",
	  attributes: {id: "back"}
  }) }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <form method="POST" autocomplete="off" novalidate="novalidate">
      <input type="hidden" name="crumb" value="{{crumb}}"/>

      {% call govukFieldset({
        legend: {
          text: "Enter your business email address",
          classes: "govuk-fieldset__legend--l",
          isPageHeading: true
        }
      }) %}
        <p class="govuk-body">Enter the main business email address linked to the business registering an interest in your Rural Payments account.</p>
        <p class="govuk-body">Do not use your personal email address which may also be linked to the business.</p>
        <div class="govuk-inset-text">
          <p class="govuk-body">We'll only send confirmation you've successfully registered to the main business email address.</p>
        </div>
        {{ 
          govukInput({
            label: {
              text: "Enter your email address",
              classes: "govuk-label",
              for: "emailAddress"
            },
            classes: "govuk-input-!-width-full",
            id: "emailAddress",
            name: "emailAddress",
            value: emailAddress,
            errorMessage: errorMessages.emailAddress
          }) 
        }}
        {{ 
          govukInput({
            label: {
              text: "Confirm your email address",
              classes: "govuk-label",
              for: "confirmEmailAddress"
            },
            classes: "govuk-input-!-width-full",
            id: "confirmEmailAddress",
            name: "confirmEmailAddress",
            value: confirmEmailAddress,
            errorMessage: errorMessages.confirmEmailAddress
          }) 
        }}
      {% endcall %}

      {{ 
        govukButton({
          classes: "govuk-!-margin-top-2 govuk-!-margin-bottom-8",
          text: "Continue",
          preventDoubleClick: true
        }) 
      }}

      {{ 
        govukDetails({
          summaryText: "Problems with your email",
          html: "<p>If you have lost or forgotten your business email address or need to check which email address is linked to the business, contact the Rural Payments Agency.</p>" + rpaContactDetails({email: ruralPaymentsAgency.email, callChargesUri: ruralPaymentsAgency.callChargesUri, telephone: ruralPaymentsAgency.telephone})
        })  
      }}
    </form>
  </div>
</div>
{% endblock %}
