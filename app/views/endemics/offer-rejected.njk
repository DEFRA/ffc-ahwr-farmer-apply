{% extends './layouts/layout.njk' %}

{% block pageTitle %}{{title}} - {{ serviceName }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">{{title}}</h1>
      <p class="govuk-body">You have rejected the agreement offer and your application has been cancelled.</p>
      <p>You'll need to start a new application if:</p>

      <ul class="govuk-list govuk-list--bullet">
        <li>you rejected the agreement by mistake</li>
        <li>you change your mind and do want to apply</li>
      </ul>

      <p>If you have any questions about your application, contact the Rural Payments Agency.</p>

      {{ rpaContactDetails({email: ruralPaymentsAgency.email, callChargesUri: ruralPaymentsAgency.callChargesUri, telephone: ruralPaymentsAgency.telephone}) }}
    </div>
  </div>
{% endblock %}