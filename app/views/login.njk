{% extends './layouts/layout.njk' %}

{% block pageTitle %}Sign in - {{ serviceName }}{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
        text: "Back",
        href: "/apply/start",
        attributes: {
          id: "back"
        }
      })
    }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST">
        <input type="hidden" name="crumb" value="{{crumb}}"/>
        {{ govukInput({
          label: {
            text: "Enter your email address",
            classes: "govuk-label--l",
            isPageHeading: true
          },
          hint: {
            text: hintText
          },
          classes: "govuk-input-!-width-full",
          id: "email",
          name: "email",
          value: email,
          errorMessage: errorMessages.email
        }) }}

        {{ govukInput({
          label: {
            text: "Enter your single business identifier (SBI) number",
            classes: "govuk-label--l",
            isPageHeading: true
          },
          hint: {
            text: 'This is the 9 digit number emailed to you in your Rural Payments account used to identify your business.'
          },
          classes: "govuk-input-!-width-full",
          id: "sbi",
          name: "sbi",
          value: sbi,
          errorMessage: errorMessages.sbi
        }) }}

        {{ govukButton({
          text: "Continue",
          attributes: {
            id: "submit"
          }
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
